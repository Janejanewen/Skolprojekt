@model IEnumerable<Department>;

@{
    Layout = "_CoordinatorLayout";
}
<main>
	<h2>Detaljer för ärendet</h2>
	<p class="info">Du är inloggad som samordnare</p>

	@await Component.InvokeAsync("ShowOneErrand", ViewBag.ID) <!--hämta view component-->


	<section id="bottomColumn">
		<h3>Redigera ärende</h3>

		<form asp-controller="Coordinator" asp-action="SaveDepartment" method="post">
		<p>
			Ange enhet:
			<select name="department">
				<option selected="selected">Välj</option>
				@foreach (Department departments in Model)
				{
					<option value="@departments.DepartmentID">@departments.DepartmentName</option> <!--välj avdelning-->
				}
			</select>
		</p>

		<p>
			<input class="button" type="submit" value="Spara" />
	   </p>
	   </form>

	</section>
</main>